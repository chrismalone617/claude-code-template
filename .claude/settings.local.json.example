{
  "$schema": "https://claude.ai/schema/settings.json",
  "description": "Personal Claude Code settings (not committed to git)",
  "_note": "Copy this to settings.local.json and customize",

  "permissions": {
    "_comment": "Personal permission overrides",
    "allowedCommands": {
      "bash": [
        "_note": "Add personal tools here",
        "vim",
        "nvim",
        "emacs",
        "code"
      ]
    },
    "blockedPaths": [
      "_note": "Add personal paths to block",
      "~/secrets/**",
      "~/personal/**"
    ]
  },

  "hooks": {
    "_comment": "Personal hooks (override project hooks if needed)",
    "_examples": {
      "afterEdit": "~/bin/my-format-script.sh",
      "beforeCommit": "~/bin/my-pre-commit.sh"
    }
  },

  "environment": {
    "_comment": "Personal environment variables (loaded automatically)",
    "_note": "Use this for machine-specific configuration",
    "_examples": {
      "EDITOR": "vim",
      "PREFERRED_SHELL": "zsh",
      "CUSTOM_PATH": "/usr/local/custom/bin"
    }
  },

  "ui": {
    "_comment": "Personal UI preferences",
    "theme": "dark",
    "verbose": false,
    "showTimestamps": true
  },

  "ai": {
    "_comment": "Personal AI behavior preferences",
    "temperature": 0.7,
    "maxTokens": 4096,
    "_note": "These override defaults but not model limits"
  },

  "_personal_notes": {
    "_reminder": "This file should be in .gitignore",
    "_usage": "Copy from settings.local.json.example to settings.local.json",
    "_priority": "Settings here override settings.json"
  }
}
